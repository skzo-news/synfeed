{
  "name": "synfeed",
  "productName": "SynFeed",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "description": "SynFeed â€” bias-aware Tech/AI/Sec feed with in-app video, cyber-noir theme, and auto-update.",
  "author": "Trevor",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "start": "electron .",
    "build:web": "vite build",
    "pack": "electron-builder --dir",
    "build": "vite build && electron-builder"
  },
  "dependencies": {
    "electron-updater": "^6.3.9",
    "lucide-react": "^0.441.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-player": "^2.16.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "vite": "^5.4.2",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.synfeed.app",
    "productName": "SynFeed",
    "files": ["dist/**", "electron/**", "package.json", "buildResources/**"],
    "directories": { "buildResources": "buildResources" },
    "asar": true,
    "mac": { "category": "public.app-category.news" },
    "win": { "target": "nsis", "artifactName": "SynFeed-Setup-${version}.exe" },
    "linux": { "target": "AppImage" },
    "publish": [
      {
        "provider": "github",
        "owner": "skzo-news",
        "repo": "synfeed",
        "releaseType": "draft"
      }
    ]
  }
}
