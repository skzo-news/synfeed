{
  "name": "synfeed",
  "version": "1.0.5",
  "private": true,
  "description": "SynFeed â€” desktop news/AI reader",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "preview": "vite preview",
    "build:web": "vite build",
    "build:electron": "electron-builder -c.publish=never",
    "build:win": "vite build && electron-builder --win --x64",
    "build": "npm run build:web",
    "start": "electron ."
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18"
  },
  "build": {
    "appId": "com.synfeed.app",
    "productName": "SynFeed",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "asar": true,
    "win": {
      "target": ["nsis"],
      "artifactName": "SynFeed-${version}-win-${arch}.${ext}",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SynFeed"
    }
  },
  "license": "MIT"
}
